{
  "compilerOptions": {
    "lib": ["ES2023", "DOM"],
    "outDir": "./dist",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/ui/*": ["./src/components/ui/*"],
      "@/store/*": ["./src/store/*"],
      "@/api/*": ["./src/store/api/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/translations/*": ["./src/data/*"],
      "@/componentsGame/*": ["./src/components/pages/Games/components/*"],
      "@/uiGame/*": ["./src/components/pages/Games/components/ui/*"],

    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
